<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gofu.mathchallenge" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="14"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/math"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/activity_game" >
        </activity>
        <activity
            android:name=".ScoreboardActivity"
            android:label="@string/activity_scoreboard" >
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/activity_instruction" >
        </activity>
    </application>

</manifest>
